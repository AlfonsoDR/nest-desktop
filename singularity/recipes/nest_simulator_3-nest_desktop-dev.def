Bootstrap: docker
From: ubuntu:18.04

%labels
  AUTHOR Sebastian Spreizer <spreizer@web.de>
  VERSION 1.4.0

%files
  ./dist/nest-desktop /opt/nest-desktop

%post
  apt update && apt install -y \
  build-essential \
  cmake \
  curl \
  cython3 \
  git \
  libgsl0-dev \
  libltdl7-dev \
  libncurses5-dev \
  libreadline6-dev \
  python3-all-dev \
  python3-numpy \
  python3-pip

  pip3 install uwsgi flask flask-cors
  git clone https://github.com/babsey/nest-server.git /opt/nest-server

  cd /tmp
  git clone https://github.com/compneuronmbu/nest-simulator.git
  cd /tmp/nest-simulator
  git fetch
  git checkout nest-3
  git checkout 4348e5

  rm -rf /tmp/nest-build; mkdir /tmp/nest-build; cd /tmp/nest-build
  cmake -DCMAKE_INSTALL_PREFIX:PATH=/opt/nest-simulator/ -Dwith-python=3 /tmp/nest-simulator
  make
  make install

  rm -rf /tmp/nest-build /tmp/nest-simulator
