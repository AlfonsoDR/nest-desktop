Bootstrap: docker
From: ubuntu:20.04

%labels
  Author Sebastian Spreizer <spreizer@web.de>

%post
  apt update && DEBIAN_FRONTEND=noninteractive apt install -y \
    curl \
    libasound2 \
    libatk-bridge2.0-0 \
    libgbm-dev \
    libgconf2-dev \
    libgtk-3-0 \
    libgtkextra-dev \
    libnss3 \
    libxtst-dev \
    p7zip \
    p7zip-full \
    p7zip-rar \
    python3-pip \
    wine-stable
  dpkg --add-architecture i386 && apt update && apt install -y wine32

  pip install Flask Flask-cors RestrictedPython uwsgi

  curl -sL https://deb.nodesource.com/setup_16.x -o node_setup.sh
  bash node_setup.sh
  apt install -y nodejs
  npm install -g npm yarn
